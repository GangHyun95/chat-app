{
    "compilerOptions": {
        "module": "NodeNext",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}